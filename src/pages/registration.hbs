{{#> page title="Регистрация"}}
    {{#> shape className=""}}
        {{> title-main text="Регистрация" className="shape__title shape__title_big"}}
        {{#> form buttonLable="Зарегистрироваться" className=""}}
            {{#each user.data}}
                {{> label name=input-name text=name value="" attrs="required"}}
            {{/each}}
            {{> label name="password" text="Пароль" type="password" attrs="required"}}
            {{> label text="Пароль (ещё раз)" type="password" attrs="required" className="error"}}
        {{/form}}
        {{> link url="/login" text="Войти" className="shape__link"}}
    {{/shape}}
{{/page}}
